<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A3D89"
    tools:context=".Inicio">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:text="Olá, Usuário Convidado!"
                android:textColor="#FDFBFB"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="O que gostaria de ler hoje?"
                android:textColor="#FAF8F8"
                android:textSize="16sp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/imageView40"
                            android:layout_width="49dp"
                            android:layout_height="41dp"
                            app:srcCompat="@drawable/relogio" />

                        <TextView
                            android:id="@+id/textView90"
                            android:layout_width="151dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:text="Continue Lendo"
                            android:textAlignment="textStart"
                            android:textColor="#FDFBFB"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/button100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#01FFFFFF"
                            android:text="Ver mais"
                            android:textColor="#FDFCFD" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="283dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <HorizontalScrollView
                            android:id="@+id/ScrollView21"
                            android:layout_width="match_parent"
                            android:layout_height="283dp"></HorizontalScrollView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <HorizontalScrollView
                            android:id="@+id/ScrollView22"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="49dp"
                    android:layout_height="41dp"
                    app:srcCompat="@drawable/estrela" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="187dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:text="Atualizações do Dia"
                    android:textAlignment="textStart"
                    android:textColor="#FDFBFB"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:background="#01FFFFFF"
                    android:text="Ver mais"
                    android:textColor="#FDFCFD" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="193dp"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="#2CFFFFFF">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="193dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView500"
                                android:layout_width="100dp"
                                android:layout_height="118dp"
                                app:srcCompat="@drawable/capa" />

                            <TextView
                                android:id="@+id/textView120"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Quarta capa"
                                android:textAlignment="center"
                                android:textColor="#FBFBFB"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textView1300"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Autor"
                                android:textAlignment="center"
                                android:textColor="#FFFEFE"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>