<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".Log0regis">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="212dp"
        android:layout_height="160dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="345dp"
        android:layout_height="606dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#2B2A33"
            >


            <com.google.android.material.card.MaterialCardView
                android:layout_width="261dp"
                android:layout_height="42dp"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="80dp"
                android:backgroundTint="#1F070707">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#2B2A33">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="134dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:text="Login"

                        android:textColor="#C592FF" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="129dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="#10070707"
                        android:text="Cadastro"
                        android:textColor="#C592FF" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/form_placeholder"
                android:layout_width="300dp"
                android:layout_height="339dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:background="#2B2A33">


            </androidx.fragment.app.FragmentContainerView>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="Ao continuar, você concorda com nossos Termos de Uso e Política de Privacidade." />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>